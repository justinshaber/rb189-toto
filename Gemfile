source "https://rubygems.org"

gem "sinatra" # a DSL for quickly creating web applications in Ruby with minimal effort.
gem "sinatra-contrib" # Collection of useful Sinatra extensions
gem "erubis" # implementation of eRuby that is faster than ERB
gem "webrick" # HTTP server toolkit that can be configured as an HTTPS server, a proxy server, and a virtual-host server.
gem "rackup" # A general server command for Rack applications.
gem  "pg" # Ruby interface to the PostgreSQL RDBMS.
gem "pry"

ruby "3.0.6"